# Production Environment Configuration
NEXT_PUBLIC_ENV=production
NEXT_PUBLIC_API_URL=https://sportera.cloud
NEXT_PUBLIC_API_PREFIX=/api/v1

# Debug Configuration
NEXT_PUBLIC_DEBUG=false
NEXT_PUBLIC_LOG_LEVEL=error

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true

# Security
NEXT_PUBLIC_CSP_ENABLED=true
NEXT_PUBLIC_SECURE_COOKIES=true

# Performance
NEXT_PUBLIC_CDN_URL=${CDN_URL}
NEXT_PUBLIC_CACHE_ENABLED=true

# App Configuration
NEXT_PUBLIC_APP_NAME=SportEra
NEXT_PUBLIC_APP_VERSION=${APP_VERSION}

# Analytics
NEXT_PUBLIC_GA_ID=${GA_TRACKING_ID}
NEXT_PUBLIC_SENTRY_DSN=${SENTRY_DSN}

# Social Media
NEXT_PUBLIC_FACEBOOK_APP_ID=${FACEBOOK_APP_ID}
NEXT_PUBLIC_TWITTER_HANDLE=${TWITTER_HANDLE}
